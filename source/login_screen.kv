<LoginScreen>:
    name: 'Login'
    email: user_email
    password: user_password

    Image:
        source: 'logo.png'
        pos_hint: {'center_x': 0.5, 'center_y': 0.8}
        allow_stretch: True
        keep_ratio: True
        size_hint_x: None
        size_hint_y: None
        width: self.parent.width / 2
        height: self.parent.height / 3

    MDTextField:
        id: user_email
        hint_text: "Enter Email"
        helper_text_mode: "on_error"
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        size_hint_x: None
        width: self.parent.width / 1.5
        on_text_validate: root.login()

    MDTextField:
        id: user_password
        hint_text: "Enter Password"
        helper_text_mode: "on_error"
        password: True
        pos_hint: {'center_x': 0.5, 'center_y': 0.35}
        size_hint_x: None
        width: self.parent.width / 1.5
        on_text_validate: root.login()

    MDIconButton:
        icon: "eye-off"
        pos_hint: {"center_y": .35}
        pos: user_password.width + dp(8), 0
        theme_text_color: "Hint"
        on_release:
            self.icon = "eye" if self.icon == "eye-off" else "eye-off"
            user_password.password = False if user_password.password is True else True

    MDRectangleFlatButton:
        id: login_button
        text: 'Login'
        pos_hint: {'center_x': 0.5, 'center_y': 0.2}
        on_release: root.login()